    </nav>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-sm-8">
                <h2>Welcome {{{user}}}</h2>

                {{#each user  as |Administrator|}}
                    {{> chats}}
                {{/each}}

            </div>
        </div>
    </div>

        
    <script>"./js/logout.js"</script>
        

