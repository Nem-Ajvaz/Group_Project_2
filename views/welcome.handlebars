{{#if loggedIn}}
{{else}}                
    <nav class="navbar navbar-light">   
        <img alt="Chirper" src="./assets/images/Chirper.png" class="custom-img">

            
        <div>
            <button type="submit" id="newchat" class="btn btn-outline-secondary">New Chat</button>
